<h1>Add Comment</h1>
<%= form_for @comment do |f|%>
<%= f.label :user %>
<%= f.collection_select :user_id, @users, :id, :username, {include_blank: 'Select an existing user'}%>
<%= f.fields_for :user, @comment.build_user do |new_user| %>
  <%= new_user.label "new user" %>
  <%= new_user.text_field :username %>
<% end %>
<%= f.label :comment_content%>
<%= f.text_field :content%>
<%= f.submit %>
<% end %>
