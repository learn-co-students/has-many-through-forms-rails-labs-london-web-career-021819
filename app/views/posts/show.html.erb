<h1><%= @post.title %></h1>

<p><%= @post.content %></p>


<h3>Users</h3>
<ul>
  <% @post.users.uniq.each do |user| %>
    <li><%= link_to user.username, user_path %></li>
  <%end %>
</ul>

<h3>Comments</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
  <%end %>
</ul>

<button type="button"> <%= link_to "Create Comment", new_comment_path %></button><br>


<h3>Categories</h3>
<ul>
  <% @post.categories.each do |category| %>
    <li><%= link_to category.name, category_path %></li>
  <%end %>
</ul>
