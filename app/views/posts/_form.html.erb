<h1>Post Form</h1>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :content %>
  <%= f.text_field :content %><br>
  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %><br>
  <%= f.fields_for :categories, post.categories.new do |category_fields| %>
    <%= category_fields.label "New Category Name" %>
    <%= category_fields.text_field :name %>
  <%end %><br>
  <%= f.submit %>
<%end %>
